# AI Gateway Environment Configuration

# Basic Application Settings
APP_NAME=AI Gateway
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
PORT=8000
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=["*"]

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/ai_gateway
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# LiteLLM Configuration
LITELLM_MASTER_KEY=your-litellm-master-key
LITELLM_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/litellm

# LLM Provider API Keys
# OpenAI
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google
GOOGLE_API_KEY=your-google-api-key-here

# Azure OpenAI
AZURE_API_KEY=your-azure-api-key-here
AZURE_API_BASE=https://your-resource.openai.azure.com/
AZURE_API_VERSION=2023-12-01-preview

# Cohere
COHERE_API_KEY=your-cohere-api-key-here

# Hugging Face
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Caching Settings
CACHE_TTL=3600
CACHE_ENABLED=true
SEMANTIC_CACHE_THRESHOLD=0.95

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Cost Optimization
DEFAULT_MODEL=gpt-3.5-turbo
COST_TRACKING_ENABLED=true
BUDGET_LIMIT_USD=1000.00

# Specialized Services Settings
BLOG_DEFAULT_MODEL=gpt-4
SUPPORT_DEFAULT_MODEL=gpt-3.5-turbo
CLASSIFICATION_MODEL=gpt-3.5-turbo

# Development/Testing (set CACHE_ENABLED=false for testing without Redis)
# CACHE_ENABLED=false
